<h2>Edit movie</h2>
<form method="POST" action="/movies/{{movie._id}}/edit">
  <label>Name:</label>
  <input required type="text" name="title" value="{{movie.title}}"></input>
  <label>Genre:</label>
  <input required type="text" name="genre" value="{{movie.genre}}"></input>
  <label>Plot:</label>
  <input type="text" name="plot" value="{{movie.plot}}"></input>
  <label>Cast:</label>
  <select name="cast" multiple>
    {{#each celebrities}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button type="submit">Edit movie</button>
</form>